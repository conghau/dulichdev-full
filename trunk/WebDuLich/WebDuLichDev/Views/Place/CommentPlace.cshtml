    js.src = "http://static.me.zing.vn/sp/js/all-1.39.js#&appId=663270de6faf4149ac73cb5e77374924&status=true";
    fjs.parentNode.insertBefore(js, fjs);
}
											(document, "script", "zingme-jssdk"));</script>
    <div id="bxwg" class="zme-comments" data-url="@url" data-width="520" data-num-posts="3" data-min-character="5" data-show-message="" data-max-character="300"></div>
}
else if (ViewBag.type == "facebook")
{
    <div id="fb-root"></div>
    <script>(function (d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/vi_VN/all.js#xfbml=1&appId=1381367088774409";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
    <div class="fb-comments" data-href="@url" data-width="520" data-numposts="5" data-colorscheme="light"></div>
}
else
{
