    <script type="text/javascript">
        $(document).ready(function () {
            $(".basic").jRating({
                onClick: function (element, rate, idBox, nameBox, widthColorOneStar) {
                    $.ajax({
                        url: '@Url.Action("Rating","Place")',
                        type: "Post",
                        data: { rate: rate, placeId: idBox },
                        dataType: "json",
                        success: function (data) {
                            if (data.success) {

                                $(element).attr('data-average', data.Avg);
                                $(element).find('.jRatingAverage').css('width', '0px')
                                $(element).find('.jRatingColor').css('width', widthColorOneStar * data.Avg)

                                $(element).parent().children().last().replaceWith('<p class="text">   Đánh giá hiện tại :' + data.Avg + ' bởi ' + data.TotalUser + ' người</p>')
                                $.ajax({
                                    url: '@Url.Action("PostNoticeRate","Zing")',
                                    type: "Post",
                                    data: { rate: rate, placeName: nameBox, ID: idBox },
                                    dataType: 'json',
                                    success: function (result) {
                                    }
                                });
                            }
                            else
                                alert("that bai");
                        },
                    });
                }
            });
        });
        function reportspam(e, b) {
            $.ajax({
                url: '@Url.Action("Spams","Place")',
                data: { placeId: e },
                type: "post",
                dataType: "Json",
                success: function (data) {
                    if (data.status == 'OK') {
                        jAlert('Cảm ơn bạn đã báo cáo cho chúng tôi', 'Thông báo');
                        var img = b.children;
                        $(img).attr('src', '/Content/themes/custom/Image/Flag-04-1.png');
                    }
                    else {
                        jAlert('Chưa thực hiện được', 'Thông báo');
                    }
                }
            });
        };
    </script>
